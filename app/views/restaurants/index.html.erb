<div><h1>Restaurants Index</h1></div>
<div>
<ul>
<% @restaurants.each do |restaurant| %>
  <li data-restaurant-id="<%= restaurant.id %>">
  <%=  restaurant.name %>
  <%=  restaurant.address %>
  <%= link_to "See more", restaurant_path(restaurant) %>
  <%= link_to "Delete", restaurant, method: :delete, remote: true %></li>
  <% end %>
</ul>
</div>

